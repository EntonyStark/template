{
	"extends": ["airbnb-base"],
	"parser": "babel-eslint",
	"plugins": ["react", "json", "prettier"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"rules": {
		"react/jsx-indent": 0,
		"no-else-return": 0,
		"no-unused-vars": [
			"error",
			{ "vars": "all", "args": "after-used", "varsIgnorePattern": "React" }
		],
		"react/jsx-uses-vars": 2,
		"linebreak-style": 0,
		"max-len": [1, 200, 2, { "ignoreComments": true }],
		"no-trailing-spaces": ["error", { "skipBlankLines": true }],
		"operator-linebreak": [2, "before", { "overrides": { "?": "after" } }],
		"react/prop-types": [2],
		"no-console": 0,
		"import/extensions": ["error", "never", { "packages": "always" }],
		"react/jsx-filename-extension": [
			1,
			{ "extensions": [".js", ".jsx", ".json"] }
		],
		"no-shadow": "off",
		"singleQuote": true,
		"indent": ["error", 2, { "SwitchCase": 1 }],
		"no-tabs": 0,
		"no-underscore-dangle": 0,
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"spaced-comment": [
			2,
			"always",
			{ "exceptions": [], "block": { "markers": [] } }
		],
		"prettier.singleQuote": true
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"settings": {
		"import/ignore": ["node_modules", ".(json|css)$"]
	}
}
